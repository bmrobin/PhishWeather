{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "src/main/webapp/dist",
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include":[
    "src/main/webapp/**/*.ts"
  ],
  "exclude": [
    "src/main/webapp/dist",
    "src/main/webapp/scripts/app/**/__tests__/*spec.ts"
  ]
}
